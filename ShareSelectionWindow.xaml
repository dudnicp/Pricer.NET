<Window x:Class="PricingApp.ShareSelectionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PricingApp"
             mc:Ignorable="d" 
             Height="120" Width="400">
    <Window.DataContext>
        <local:TestDataViewModel></local:TestDataViewModel>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <ComboBox x:Name="aviableOptionCombobBox" Grid.Row="0" ItemsSource="{Binding AviableShares}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Id}" />
                        <Label Content="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="confirmationButton" Content="Valider" Grid.Row="1" Command="{Binding ConfirmUnderlyingShare}" CommandParameter="{Binding ElementName=aviableOptionCombobBox, Path=SelectedItem}"/>
    </Grid>
</Window>
